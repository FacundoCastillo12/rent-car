{% extends "views/layouts/base.njk" %}
{% block container %}
<form class="container mt-4 box has-background-link" action="/car/save" method="POST" enctype="multipart/form-data">
    <h2 class="title">Car with ID: {{car.id}}</h2>
      <div class="columns is-multiline is-variable is-2-mobile is-0-tablet is-4-desktop is-8-widescreen is-1-fullhd mb-4">
        <div class="column is-half">
          <div class="field">
            <label class="label">ID</label>
            <div class="control">
              <input class="input" type="number" name="id" placeholder="Id" value="{{car.id}}" readonly >
              <span class="icon is-small is-left">
              </span>
            </div>
          </div>
          <div class="field">
            <label class="label">Brand</label>
            <div class="control has-icons-left">
              <input class="input" type="text" name="brand" placeholder="Enter the car brand" value="{{car.brand}}">
              <span class="icon is-small is-left">
                <i class="fa-sharp fa-solid fa-car"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <label class="label">Model</label>
            <div class="control has-icons-left">
              <input class="input" type="text" name="model" placeholder="Enter the car model" value="{{car.model}}">
              <span class="icon is-small is-left">
                <i class="fa-solid fa-car-side"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <label class="label">Year</label>
            <div class="control has-icons-left">
              <input class="input" type="number" name="year" placeholder="Enter model year" max="9999" value="{{car.year}}">
              <span class="icon is-small is-left">
                <i class="fa-solid fa-calendar"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <label class="label">Mileage</label>
            <div class="control has-icons-left">
              <input class="input" type="number" name="kms" placeholder="Enter the car's mileage" value="{{car.kms}}">
              <span class="icon is-small is-left">
                <i class="fa-solid fa-road"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <label class="label">Colors</label>
            <div class="control has-icons-left">
              <input class="input" type="text" name="colour" placeholder="Enter the colors of the car" value="{{car.colour}}">
              <span class="icon is-small is-left">
                <i class="fa-solid fa-palette"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <label class="label">Air-conditioning</label>
            <div class="control">
              <label class="radio">
                <input type="radio" name="air" value="Yes" {{ 'checked' if car.air === 'Yes' }}>
                Yes
              </label>
              <label class="radio">
                <input type="radio" name="air" value="No" {{ 'checked' if car.air === 'No' }}>
                No
              </label>
            </div>
          </div>
          <div class="field">
            <label class="label">Maximum passengers</label>
            <div class="control has-icons-left">
              <div class="select">
                <span class="icon is-small is-left">
                  <i class="fa-sharp fa-solid fa-person"></i>
                </span>
                <select name="passenger">
                  <option disabled value="">Select an option</option>
                  <option value="1" {{ 'selected' if car.passenger === '1' }} >1</option>
                  <option value="2" {{ 'selected' if car.passenger === '2' }}>2</option>
                  <option value="3" {{ 'selected' if car.passenger === '3' }}>3</option>
                  <option value="4" {{ 'selected' if car.passenger === '4' }}>4</option>
                  <option value="5" {{ 'selected' if car.passenger === '5' }}>5</option>
                  <option value="6" {{ 'selected' if car.passenger === '6' }}>6</option>
                  <option value="7" {{ 'selected' if car.passenger === '7' }}>7</option>
                  <option value="8" {{ 'selected' if car.passenger === '8' }}>8</option>
                </select>
              </div>
            </div>
          </div>
        </div>
        <div class="column is-half">
          <div class="field">
            <label class="label">Image</label>
            <div class="control has-icons-left">
              <input class="input" type="file" name="img">
              <span class="icon is-small is-left">
                <i class="fa-solid fa-image"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <label class="label">Transmission</label>
            <div class="control">
              <div class="select">
                <select name="transmission">
                  <option value="" disabled>Select an option</option>
                  <option value="Manual" {{ 'selected' if car.transmission === 'Manual' }}>Manual</option>
                  <option value="Automatic" {{ 'selected' if car.transmission === 'Automatic' }}>Automatic</option>
                </select>
              </div>
            </div>
          </div>
          <div class="field">
            <label class="label">Price</label>
            <div class="control has-icons-left">
              <input class="input" type="number" name="price" placeholder="Enter the price of the car" value="{{car.price}}">
              <span class="icon is-small is-left">
                <i class="fa-solid fa-dollar-sign"></i>
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="field is-grouped is-grouped-centered">
        <p class="control">
          <button type="submit" class="button is-primary">
            Submit
          </button>
        </p>
        <p class="control">
          <a href="/car/manage" class="button is-light">
            Cancel
          </a>
        </p>
      </div>
    
  </form>
{% endblock %}
