{% extends "views/layouts/base.njk" %}
{% block menu %}
<div class="columns is-centered mt-6">
    <div class="column">
      <div class="card box has-background-info-dark has-text-white is-size-5">
        <div class="card-image">
          <figure class="image is-4by3">
            <img src="https://bulma.io/images/placeholders/256x256.png" alt="Car Image">
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-3  has-text-white">Brand: <strong class="text-info">Toyota</strong></p>
              <p class="subtitle is-5  has-text-white">Model: <strong class="text-info">Corolla</strong></p>
            </div>
          </div>
          <div class="content has-text-justified is-family-sans-serif">
            <p>Model Year: <strong class="text-info">2015</strong></p>
            <p>Kilometers: <strong class="text-info">50000 km</strong> </p>
            <p>Color: <strong class="text-info">Blue</strong></p>
            <p>Air conditioning: <strong class="text-info">Yes</strong></p>
            <p>Passenger capacity: <strong class="text-info">5</strong></p>
            <p>Transmission: <strong class="text-info">Automatic</strong></p>
            <p>Rented: <strong class="text-info">Yes</strong></p>
            <p>User Rent: <strong class="text-info">@Usuario2</strong></p>
            <p>Price: <strong class="text-info">$20,000</strong></p>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}